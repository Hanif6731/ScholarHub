                            @Html.DisplayNameFor(model => model.AplicationStatus)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AplicationStatus)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ApplicationInformation)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ApplicationInformation)
                        </dd>
