@model ScholarshipHub.Models.University

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div width="100%">
        <table width="100%" border="0">
            <tr>
                <td>
                    <h4>Scholarship Hub | University</h4>
                </td>
                <td align="right">
                    @Html.ActionLink("Messeges", "Messege", new { email=Model.email})|@Html.ActionLink("Manage scholarship offers", "Index", "UniversityOffer")|@Html.ActionLink("Edit University profile", "Edit", new { id = Model.id })|@Html.ActionLink("Logout", "Logout", "Login")
                </td>
            </tr>
        </table>
        <hr />
        <div style="float:left; width:48%;vertical-align:middle">
        <table width="100%" border="1">
            <tr>
                <td colspan="2"  align="center"><h4>@Html.DisplayFor(model => model.Name)</h4></td>
                
                
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.username)</td>
                <td align="left">@Html.DisplayFor(model => model.username)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.email)</td>
                <td align="left">@Html.DisplayFor(model => model.email)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.Contact)</td>
                <td align="left">@Html.DisplayFor(model => model.Contact)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.Contry)</td>
                <td align="left">@Html.DisplayFor(model => model.Contry)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.City)</td>
                <td align="left">@Html.DisplayFor(model => model.City)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.Zip)</td>
                <td align="left">@Html.DisplayFor(model => model.Zip)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.Motto)</td>
                <td align="left">@Html.DisplayFor(model => model.Motto)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.Mission)</td>
                <td align="left">@Html.DisplayFor(model => model.Mission)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.Vision)</td>
                <td align="left">@Html.DisplayFor(model => model.Vision)</td>
            </tr>
            <tr>
                <td align="center">@Html.DisplayNameFor(model => model.descripton)</td>
                <td align="left">@Html.DisplayFor(model => model.descripton)</td>
            </tr>

        </table>
        </div>
        <div  style="float:right;width:48%;height:500px;text-align:center;vertical-align:middle">
            
            <iframe src="~/Media/Files/@Model.ApprovalPath" width="100%" height="100%" />
        </div>

        

        
    </div>
    
</body>
</html>
